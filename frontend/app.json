{
  "expo": {
    "name": "TapWise",
    "slug": "tapwise",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tapwise",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "owner": "tapwise",
    "extra": {
      "eas": {
        "projectId": "tapwise-credit-card-app"
      }
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TapWise needs your location to recommend the best credit card based on where you are.",
        "NSLocationWhenInUseUsageDescription": "TapWise needs your location to recommend the best credit card based on where you are.",
        "UIBackgroundModes": [
          "location",
          "location"
        ]
      },
      "bundleIdentifier": "com.hkamma2004.tapwise"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "TapWise needs your location to recommend the best credit card based on where you are.",
          "locationWhenInUsePermission": "TapWise needs your location to recommend the best credit card based on where you are."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#667eea"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
